<!DOCTYPE html>
<html>
<head>
    <title>Edit Account</title>
</head>
<body>
    <%- include('./partials/header') %>
    <form action="/account/<%= account.emailAddress %>" method="POST">
        <label for="emailAddress">Email Address:</label>
        <input type="email" id="emailAddress" name="emailAddress" value="<%= account.emailAddress %>" required readonly><br>
        
        <label for="name">Name:</label>
        <input type="text" id="name" name="name" value="<%= account.name %>" required><br>
        
        <label for="password">Password:</label>
        <input type="password" id="password" name="password" value="<%= account.password %>" required><br>
        
        <button type="submit">Update Account</button>
    </form>

    <form action="/account/delete/<%= account.emailAddress %>" method="POST">
        <button type="submit">Delete Account</button>
    </form>
</body>
</html>
